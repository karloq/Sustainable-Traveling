<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_travel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/textview_travel_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="KorsvÃ¤gen"/>

        <TextView
            android:id="@+id/textview_travel_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textview_travel_from"
            android:textColor="#8A8A8A"
            android:text="Platform A"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageview_travel_wheelchair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textview_travel_platform"
            android:layout_marginStart="4dp"
            android:src="@drawable/wheelchair"
            />

        <TextView
            android:id="@+id/textview_travel_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:text="11:02"
            />

        <TextView
            android:id="@+id/textview_travel_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textview_travel_arrival"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:text="10:15 -"
            />

        <TextView
            android:id="@+id/textview_travel_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@+id/textview_travel_arrival"
            android:layout_alignParentEnd="true"
            android:textColor="#8A8A8A"
            android:textSize="10sp"
            />

        <ImageView
            android:id="@+id/imageview_travel_line_1"
            android:layout_width="34dp"
            android:layout_height="41dp"
            android:layout_below="@id/textview_travel_from"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"/>

        <ImageView
            android:id="@+id/imageview_travel_line_2"
            android:layout_width="34dp"
            android:layout_height="41dp"
            android:layout_below="@id/textview_travel_from"
            android:layout_toEndOf="@id/imageview_travel_line_1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp" />

        <ImageView
            android:id="@+id/imageview_travel_line_3"
            android:layout_width="34dp"
            android:layout_height="41dp"
            android:layout_below="@id/textview_travel_from"
            android:layout_toEndOf="@id/imageview_travel_line_2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/textview_travel_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageview_travel_line_3"
            android:layout_marginTop="35dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_travel_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textview_travel_line_1"
            android:layout_marginTop="35dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/textview_travel_line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textview_travel_line_2"
            android:layout_marginTop="35dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>