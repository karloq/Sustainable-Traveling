<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimary"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/colorAccent">

            <ImageButton
                android:id="@+id/button_stats_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:text="@string/go_back"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/clear_data"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:text="Clear data"
                android:textSize="12dp"
                android:background="@color/colorPrimary"
                />

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:text="New month"
                android:textSize="12dp"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/month"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="57dp"
                android:text="Current month:             X"
                android:textSize="11dp"
                android:textAlignment="center"
                />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="4dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignTop="@+id/pb_jan"
            android:layout_alignBottom="@+id/pb_dec"
            android:translationZ="10dp"
            android:background="@drawable/dotted"
            android:layerType="software"
            android:layout_height="600dp" />

        <View
            android:layout_width="4dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignTop="@+id/pb_jan"
            android:layout_alignBottom="@+id/pb_dec"
            android:translationZ="10dp"
            android:background="@drawable/dotted"
            android:layerType="software"
            android:layout_height="600dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="188dp"
            android:src="@drawable/tree_6"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="273dp"
            android:src="@drawable/tree_7"
            />

        <TextView
            android:id="@+id/total_2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pb_dec"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="Total 2020: "
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/total_leafs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pb_dec"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@id/total_2020"
            android:layout_marginRight="-40dp"
            android:text="X"
            android:textSize="18dp"
            android:textColor="@color/text_black"
            />

        <ImageView
            android:id="@+id/total_pic_leafs"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/total_leafs"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@+id/total_leafs"
            android:layout_marginRight="-30dp"
            android:src="@drawable/leaf_green"
            />



        <TextView
            android:id="@+id/total_green_trees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pb_dec"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@id/total_pic_leafs"
            android:layout_marginRight="-30dp"
            android:text="X"
            android:textSize="18dp"
            android:textColor="@color/text_black"
            />

        <ImageView
            android:id="@+id/total_pic_green_trees"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/total_leafs"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@+id/total_green_trees"
            android:layout_marginRight="-30dp"
            android:src="@drawable/tree_6"
            />



        <TextView
            android:id="@+id/total_gold_trees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pb_dec"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@id/total_pic_green_trees"
            android:layout_marginRight="-30dp"
            android:text="X"
            android:textSize="18dp"
            android:textColor="@color/text_black"
            />

        <ImageView
            android:id="@+id/total_pic_gold_trees"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/total_leafs"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@+id/total_gold_trees"
            android:layout_marginRight="-30dp"
            android:src="@drawable/tree_7"
            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pb_jan"
                android:layout_alignStart="@+id/pb_jan"
                style="@style/ProgressBarOverText"
                android:text="January"
                android:textColor="@color/text_black"/>

            <ProgressBar
                android:id="@+id/pb_jan"
                style="@style/MyProgressBar"
                android:layout_marginTop="200dp"
                android:progress="37" />

            <TextView
                android:id="@+id/pb_leafs_jan"
                android:layout_alignBottom="@+id/pb_jan"
                style="@style/ProgressBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37"/>

            <ImageView
                android:layout_alignBottom="@+id/pb_jan"
                style="@style/ProgressBarIcon"
                app:srcCompat="@drawable/leaf_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/pb_feb"
                    android:layout_alignStart="@+id/pb_feb"
                    style="@style/ProgressBarOverText"

                    android:text="February"
                    android:textColor="@color/text_black"/>

                <ProgressBar
                    android:id="@+id/pb_feb"
                    style="@style/MyProgressBar"
                    android:layout_alignBottom="@+id/pb_jan"
                    android:progress="21" />

                <TextView
                    android:id="@+id/pb_leafs_feb"
                    android:layout_alignBottom="@+id/pb_feb"
                    style="@style/ProgressBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"/>

                <ImageView
                    android:layout_alignBottom="@+id/pb_feb"
                    style="@style/ProgressBarIcon"
                    app:srcCompat="@drawable/leaf_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/pb_mar"
                        android:layout_alignStart="@+id/pb_mar"

                        android:text="Mars"
                        android:textColor="@color/text_black"
                        style="@style/ProgressBarOverText"/>

                    <ProgressBar
                        android:id="@+id/pb_mar"
                        style="@style/MyProgressBar"
                        android:layout_alignBottom="@+id/pb_feb"
                        android:progress="27" />

                    <TextView
                        android:id="@+id/pb_leafs_mar"
                        android:layout_alignBottom="@+id/pb_mar"
                        style="@style/ProgressBarText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"/>

                    <ImageView
                        android:layout_alignBottom="@+id/pb_mar"
                        style="@style/ProgressBarIcon"
                        app:srcCompat="@drawable/leaf_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/pb_apr"
                            android:layout_alignStart="@+id/pb_apr"

                            android:text="April"
                            android:textColor="@color/text_black"
                            style="@style/ProgressBarOverText"/>

                        <ProgressBar
                            android:id="@+id/pb_apr"
                            style="@style/MyProgressBar"
                            android:layout_alignBottom="@+id/pb_mar"
                            android:progress="5" />

                        <TextView
                            android:id="@+id/pb_leafs_apr"
                            android:layout_alignBottom="@+id/pb_apr"
                            style="@style/ProgressBarText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"/>

                        <ImageView
                            android:layout_alignBottom="@+id/pb_apr"
                            style="@style/ProgressBarIcon"
                            app:srcCompat="@drawable/leaf_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/pb_may"
                                android:layout_alignStart="@+id/pb_may"

                                android:text="May"
                                android:textColor="@color/text_black"
                                style="@style/ProgressBarOverText"/>

                            <ProgressBar
                                android:id="@+id/pb_may"
                                style="@style/MyProgressBar"
                                android:layout_alignBottom="@+id/pb_apr"
                                android:progress="13" />

                            <TextView
                                android:id="@+id/pb_leafs_may"
                                android:layout_alignBottom="@+id/pb_may"
                                style="@style/ProgressBarText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"/>

                            <ImageView
                                android:layout_alignBottom="@+id/pb_may"
                                style="@style/ProgressBarIcon"
                                app:srcCompat="@drawable/leaf_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@+id/pb_jun"
                                    android:layout_alignStart="@+id/pb_jun"

                                    android:text="June"
                                    android:textColor="@color/text_black"
                                    style="@style/ProgressBarOverText"/>

                                <ProgressBar
                                    android:id="@+id/pb_jun"
                                    style="@style/MyProgressBar"
                                    android:layout_alignBottom="@+id/pb_may"
                                    android:progress="40" />

                                <TextView
                                    android:id="@+id/pb_leafs_jun"
                                    android:layout_alignBottom="@+id/pb_jun"
                                    style="@style/ProgressBarText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"/>

                                <ImageView
                                    android:layout_alignBottom="@+id/pb_jun"
                                    style="@style/ProgressBarIcon"
                                    app:srcCompat="@drawable/leaf_green" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/pb_jul"
                                        android:layout_alignStart="@+id/pb_jul"

                                        android:text="July"
                                        android:textColor="@color/text_black"
                                        style="@style/ProgressBarOverText"/>

                                    <ProgressBar
                                        android:id="@+id/pb_jul"
                                        style="@style/MyProgressBar"
                                        android:layout_alignBottom="@+id/pb_jun"
                                        android:progress="20" />

                                    <TextView
                                        android:id="@+id/pb_leafs_jul"
                                        android:layout_alignBottom="@+id/pb_jul"
                                        style="@style/ProgressBarText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20"/>

                                    <ImageView
                                        android:layout_alignBottom="@+id/pb_jul"
                                        style="@style/ProgressBarIcon"
                                        app:srcCompat="@drawable/leaf_green" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@+id/pb_aug"
                                            android:layout_alignStart="@+id/pb_aug"

                                            android:text="August"
                                            android:textColor="@color/text_black"
                                            style="@style/ProgressBarOverText"/>

                                        <ProgressBar
                                            android:id="@+id/pb_aug"
                                            style="@style/MyProgressBar"
                                            android:layout_alignBottom="@+id/pb_jul"
                                            android:progress="2" />

                                        <TextView
                                            android:id="@+id/pb_leafs_aug"
                                            android:layout_alignBottom="@+id/pb_aug"
                                            style="@style/ProgressBarText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="2"/>

                                        <ImageView
                                            android:layout_alignBottom="@+id/pb_aug"
                                            style="@style/ProgressBarIcon"
                                            app:srcCompat="@drawable/leaf_green" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignTop="@+id/pb_sep"
                                                android:layout_alignStart="@+id/pb_sep"

                                                android:text="September"
                                                android:textColor="@color/text_black"
                                                style="@style/ProgressBarOverText"/>

                                            <ProgressBar
                                                android:id="@+id/pb_sep"
                                                style="@style/MyProgressBar"
                                                android:layout_alignBottom="@+id/pb_aug"
                                                android:progress="23" />

                                            <TextView
                                                android:id="@+id/pb_leafs_sep"
                                                android:layout_alignBottom="@+id/pb_sep"
                                                style="@style/ProgressBarText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="23"/>

                                            <ImageView
                                                android:layout_alignBottom="@+id/pb_sep"
                                                style="@style/ProgressBarIcon"
                                                app:srcCompat="@drawable/leaf_green" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignTop="@+id/pb_oct"
                                                    android:layout_alignStart="@+id/pb_oct"

                                                    android:text="October"
                                                    android:textColor="@color/text_black"
                                                    style="@style/ProgressBarOverText"/>

                                                <ProgressBar
                                                    android:id="@+id/pb_oct"
                                                    style="@style/MyProgressBar"
                                                    android:layout_alignBottom="@+id/pb_sep"
                                                    android:progress="16" />

                                                <TextView
                                                    android:id="@+id/pb_leafs_oct"
                                                    android:layout_alignBottom="@+id/pb_oct"
                                                    style="@style/ProgressBarText"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="0"/>

                                                <ImageView
                                                    android:layout_alignBottom="@+id/pb_oct"
                                                    style="@style/ProgressBarIcon"
                                                    app:srcCompat="@drawable/leaf_green" />

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignTop="@+id/pb_nov"
                                                        android:layout_alignStart="@+id/pb_nov"

                                                        android:text="November"
                                                        android:textColor="@color/text_black"
                                                        style="@style/ProgressBarOverText" />

                                                    <ProgressBar
                                                        android:id="@+id/pb_nov"
                                                        style="@style/MyProgressBar"
                                                        android:layout_alignBottom="@+id/pb_oct"
                                                        android:progress="14" />

                                                    <TextView
                                                        android:id="@+id/pb_leafs_nov"
                                                        android:layout_alignBottom="@+id/pb_nov"
                                                        style="@style/ProgressBarText"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="0"/>

                                                    <ImageView
                                                        android:layout_alignBottom="@+id/pb_nov"
                                                        style="@style/ProgressBarIcon"
                                                        app:srcCompat="@drawable/leaf_green" />

                                                        <TextView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_alignTop="@+id/pb_dec"
                                                            android:layout_alignStart="@+id/pb_dec"

                                                            android:text="December"
                                                            android:textColor="@color/text_black"
                                                            style="@style/ProgressBarOverText"/>

                                                        <ProgressBar
                                                            android:id="@+id/pb_dec"
                                                            style="@style/MyProgressBar"
                                                            android:layout_alignBottom="@+id/pb_nov"
                                                            android:progress="26" />

                                                        <TextView
                                                            android:id="@+id/pb_leafs_dec"
                                                            android:layout_alignBottom="@+id/pb_dec"
                                                            style="@style/ProgressBarText"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="0"/>

                                                        <ImageView
                                                            android:layout_alignBottom="@+id/pb_dec"
                                                            style="@style/ProgressBarIcon"
                                                            app:srcCompat="@drawable/leaf_green" />

    </RelativeLayout>


</RelativeLayout>