<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00BEEE</item>
        <item name="colorPrimaryDark">#211F25</item>
        <item name="colorAccent">#C7D3D2</item>
    </style>

    <style name="CustomSwitchTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/sus_green_medium</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/sus_green</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#757575</item>
    </style>
</resources>